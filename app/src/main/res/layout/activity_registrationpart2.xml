<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1C1C1E"
    android:padding="16dp"
    tools:context=".Registrationpart2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:src="@drawable/logo" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create player profile"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#FFA500"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingBottom="24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your nickname"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_gravity="start"
                android:paddingBottom="8dp" />

            <EditText
                android:id="@+id/nickname_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0B0B0"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- حقل اختيار مستوى اللاعب -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose your level"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_gravity="start"
                android:paddingBottom="8dp" />

            <Spinner
                android:id="@+id/spinner_skill_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:background="@drawable/spinner_background"
                android:backgroundTint="#2C2C2E"
                android:entries="@array/skill_levels"
                android:spinnerMode="dropdown"
                android:textColor="#FFFFFF" />

            <!-- حقل اختيار الألعاب المفضلة -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose your preferred games"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_gravity="start"
                android:paddingBottom="8dp" />

            <Spinner
                android:id="@+id/spinner_preferred_games"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:background="@drawable/spinner_background"
                android:backgroundTint="#2C2C2E"
                android:entries="@array/preferred_games"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose your nationality"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_gravity="start"
                android:paddingBottom="8dp" />

            <!-- حقل اختيار تاريخ الميلاد -->
            <Spinner
                android:id="@+id/spinner_nationality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/spinner_background"
                android:backgroundTint="#2C2C2E"
                android:entries="@array/nationalities"
                android:padding="12dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select your birthdate"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_gravity="start"
                android:paddingBottom="8dp" />

            <!-- زر اختيار صورة -->

            <DatePicker
                android:id="@+id/birthdate_picker"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="#FFA500"
                android:calendarViewShown="false"
                android:theme="@style/DatePickerTheme" />

            <ImageButton
                android:id="@+id/pickimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/images"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:onClick="opengallarie"
                android:backgroundTint="#FFA500"
                android:background="?attr/selectableItemBackground" />

            <!-- زر إنشاء ملف اللاعب -->
            <Button
                android:id="@+id/btn_create_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FFA500"
                android:text="Create profile"
                android:layout_marginTop="24dp" />

        </LinearLayout>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>