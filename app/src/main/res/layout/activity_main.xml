<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Search Bar -->
    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Search Tournaments"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Filter Button to Expand/Collapse Drawer -->
    <Button
        android:id="@+id/toggleFilterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        app:layout_constraintTop_toBottomOf="@id/searchView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Expandable Filter Drawer -->
    <LinearLayout
        android:id="@+id/filterDrawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="?attr/colorSurface"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toggleFilterButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Mode Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode"
            android:textSize="18sp"
            android:paddingBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSinglePlayer"
                android:text="Singleplayer"
                android:checkable="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMultiPlayer"
                android:text="Multiplayer"
                android:checkable="true"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
        </com.google.android.material.chip.ChipGroup>

        <!-- Prize Range Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prize Range"
            android:textSize="18sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/sliderPrizeRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="10000"
            android:valueTo="100000000"
            android:stepSize="10000"
            app:values="@array/default_range" />

        <!-- Apply Filters Button -->
        <Button
            android:id="@+id/applyFiltersButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apply Filters" />
    </LinearLayout>

    <!-- RecyclerView to Display Videos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/videoList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/filterDrawer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView to Display No Videos Available Message -->
    <TextView
        android:id="@+id/noVideosText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No videos available"
        android:visibility="gone"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


